# ========================================
# CONFIGURACIÓN OBLIGATORIA
# ========================================

# Token de tu bot de Telegram (obtenerlo de @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Tu Chat ID de Telegram (obtenerlo de @userinfobot)
TELEGRAM_CHAT_ID=your_chat_id_here


# ========================================
# CONFIGURACIÓN OPCIONAL
# ========================================

# Intervalo de análisis en segundos (180 = 3 minutos)
CHECK_INTERVAL=180

# Exchange a utilizar (binance, kraken, coinbase, etc.)
EXCHANGE_NAME=binance

# API Keys del exchange (OPCIONAL - solo para trading real)
# El bot funciona sin estas credenciales para análisis
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=

# Umbrales de RSI
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
