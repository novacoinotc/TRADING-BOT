# ============================================================================
# TRADING BOT CONFIGURATION - EXAMPLE
# ============================================================================
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# TELEGRAM CONFIGURATION (Required)
# ============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================================================
# EXCHANGE CONFIGURATION
# ============================================================================
EXCHANGE_NAME=binance
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=

# ============================================================================
# PROXY CONFIGURATION (Required for Binance on Railway/datacenter IPs)
# ============================================================================
USE_PROXY=true
PROXY_HOST=proxy.webshare.io
PROXY_PORT=80
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
CHECK_INTERVAL=120
TIMEFRAME=1h
FLASH_TIMEFRAME=15m
ENABLE_FLASH_SIGNALS=true

# ============================================================================
# PAPER TRADING / LIVE TRADING
# ============================================================================
# TRADING_MODE: 'PAPER' (simulado) o 'LIVE' (real)
TRADING_MODE=PAPER
ENABLE_PAPER_TRADING=true
PAPER_TRADING_INITIAL_BALANCE=50000.0

# ============================================================================
# BINANCE FUTURES (Only for LIVE trading)
# ============================================================================
BINANCE_FUTURES_API_KEY=
BINANCE_FUTURES_API_SECRET=
BINANCE_FUTURES_TESTNET=false

# ============================================================================
# ML / HISTORICAL TRAINING
# ============================================================================
ENABLE_HISTORICAL_TRAINING=true
HISTORICAL_START_DATE=2025-01-01
HISTORICAL_END_DATE=2025-11-01
HISTORICAL_TIMEFRAMES=1h,4h,1d,15m
MIN_HISTORICAL_SAMPLES=200
SKIP_HISTORICAL_IF_MODEL_EXISTS=true
FORCE_HISTORICAL_DOWNLOAD=false

# ============================================================================
# SENTIMENT ANALYSIS
# ============================================================================
ENABLE_SENTIMENT_ANALYSIS=true
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key
SENTIMENT_UPDATE_INTERVAL=15
SENTIMENT_BLOCK_ON_EXTREME_FEAR=true
SENTIMENT_BOOST_ON_POSITIVE=true

# ============================================================================
# AUTONOMOUS MODE
# ============================================================================
ENABLE_AUTONOMOUS_MODE=true
AUTONOMOUS_AUTO_SAVE_INTERVAL=30
AUTONOMOUS_OPTIMIZATION_INTERVAL=2.0
AUTONOMOUS_MIN_TRADES_BEFORE_OPT=20

# ============================================================================
# GPT BRAIN CONFIGURATION - ADVANCED AI REASONING
# ============================================================================
# GPT Brain provides advanced reasoning for trading decisions
# Requires OpenAI API key
# ============================================================================

# Enable GPT Brain (master switch)
ENABLE_GPT_BRAIN=true

# OpenAI API Key (REQUIRED for GPT Brain)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# GPT Model Selection
# Options: gpt-4o (recommended), gpt-4o-mini (cheaper), gpt-4-turbo
GPT_MODEL=gpt-4o

# GPT Behavior Settings
GPT_TEMPERATURE=0.7
GPT_MAX_TOKENS=2000

# GPT Features Toggle (all enabled by default)
GPT_RISK_ASSESSMENT=true
GPT_DECISION_EXPLANATION=true
GPT_STRATEGY_OPTIMIZATION=true
GPT_AUTO_PARAMETER_ADJUSTMENT=true

# Optimization Intervals
GPT_OPTIMIZATION_INTERVAL_HOURS=2.0
GPT_MIN_TRADES_FOR_OPTIMIZATION=20

# Risk Assessment Settings
GPT_BLOCK_HIGH_RISK_TRADES=true
GPT_MAX_RISK_SCORE_TO_APPROVE=70

# Reaction to Streaks
GPT_REACT_TO_LOSING_STREAK=true
GPT_LOSING_STREAK_THRESHOLD=3
GPT_REACT_TO_WINNING_STREAK=true
GPT_WINNING_STREAK_THRESHOLD=5

# Cost Control (daily limit in USD)
GPT_MAX_DAILY_COST_USD=10.0
GPT_CACHE_RESPONSES=true

# Notifications
GPT_NOTIFY_BLOCKED_TRADES=true
GPT_NOTIFY_PARAMETER_CHANGES=true
GPT_NOTIFY_ANALYSIS_RESULTS=true

# ============================================================================
# RISK MANAGEMENT
# ============================================================================
MAX_POSITIONS=5
MAX_DRAWDOWN_LIMIT=10.0
MAX_RISK_PER_TRADE_PCT=1.0
EMERGENCY_STOP_LOSS_PCT=5.0
ENABLE_AUTO_STOP=true

# ============================================================================
# SMART ORDER ROUTING (Spot vs Futures)
# ============================================================================
SMART_ROUTING_ENABLED=true
MIN_CONFIDENCE_FOR_FUTURES=70.0
MIN_WINRATE_FOR_FUTURES=55.0
MAX_DRAWDOWN_FOR_FUTURES=10.0
CONSERVATIVE_LEVERAGE=3
BALANCED_LEVERAGE=8
AGGRESSIVE_LEVERAGE=15

# ============================================================================
# TRAILING STOPS
# ============================================================================
TRAILING_STOP_ENABLED=true
TRAILING_DISTANCE_PCT=0.4
BREAKEVEN_AFTER_PCT=0.5
LOCK_PROFIT_STEP_PCT=0.5
MIN_PROFIT_TO_LOCK_PCT=0.3

# ============================================================================
# POSITION SIZING
# ============================================================================
MAX_POSITION_SIZE_PCT=12.0
BASE_POSITION_SIZE_PCT=10.0

# ============================================================================
# ANOMALY DETECTION
# ============================================================================
ANOMALY_DETECTION_ENABLED=true
PERFORMANCE_DEGRADATION_THRESHOLD=10.0
OUTLIER_STD_THRESHOLD=3.0
MIN_TRADES_FOR_DETECTION=20
ANOMALY_LOOKBACK_WINDOW=50
AUTO_REVERT_ENABLED=true

# ============================================================================
# ARSENAL AVANZADO
# ============================================================================
CORRELATION_ANALYSIS_ENABLED=true
LIQUIDATION_ANALYSIS_ENABLED=true
FUNDING_RATE_ANALYSIS_ENABLED=true
VOLUME_PROFILE_ENABLED=true
PATTERN_RECOGNITION_ENABLED=true
SESSION_TRADING_ENABLED=true
ORDER_FLOW_ENABLED=true
