# ========================================
# TRADING BOT v2.0 - Environment Variables
# ========================================

# Telegram Configuration (Required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Binance Futures API Configuration (v2.0 - Required)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true
BINANCE_BASE_URL=https://testnet.binancefuture.com
BINANCE_WS_URL=wss://stream.binancefuture.com

# Trading Mode Configuration
TRADING_MODE=testnet  # 'testnet' or 'live'
AUTO_TRADE=true  # Enable/disable automatic trading
DEFAULT_LEVERAGE=3  # Default leverage for futures (1-125x)
USE_ISOLATED_MARGIN=true  # Use isolated margin (recommended for risk management)

# Legacy Exchange Configuration (Optional - kept for compatibility)
EXCHANGE_NAME=binance
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=

# Proxy Configuration (Required for Binance on Railway/datacenter IPs)
USE_PROXY=true
PROXY_HOST=your_proxy_host_here
PROXY_PORT=80
PROXY_USERNAME=your_proxy_username_here
PROXY_PASSWORD=your_proxy_password_here

# CryptoPanic API (Optional - for sentiment analysis)
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here

# Feature Flags
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_FLASH_SIGNALS=true
ENABLE_AUTONOMOUS_MODE=true
ENABLE_ML_SYSTEM=true
ENABLE_HISTORICAL_TRAINING=true

# Historical Training Configuration
HISTORICAL_START_DATE=2025-01-01
HISTORICAL_END_DATE=2025-11-01
HISTORICAL_TIMEFRAMES=1h,4h,1d,15m
MIN_HISTORICAL_SAMPLES=200
FORCE_HISTORICAL_DOWNLOAD=false
SKIP_HISTORICAL_IF_MODEL_EXISTS=true

# Sentiment Analysis Configuration
SENTIMENT_UPDATE_INTERVAL=15
SENTIMENT_BLOCK_ON_EXTREME_FEAR=true
SENTIMENT_BOOST_ON_POSITIVE=true

